@page
@model Web.Pages.CadUsuarios.DetailsModel

@{
    <!DOCTYPE html>
    <html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Detalhes do Usuário - NexOS</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

        <style>

            :root {
                --cor-fundo: #373F46;
                --cor-header: #272C2F;
                --cor-nexos: #26a5ee;
                --cor-nexosdark: rgb(17, 136, 206);
                --cor-texto: #fff;
                --cor-card: #2E343A;
                --cor-card-dark: #23282E;
            }

            body {
                margin: 0;
                padding: 0;
            }

            main {
                background: linear-gradient(15deg, rgba(41,41,41,1) -100%, rgba(58,66,72,1) 70%);
                font-family: "Poppins", sans-serif;
                color: var(--cor-texto);
                min-height: 100vh;
                padding: 2rem;
                display: flex;
                justify-content: center;
                align-items: flex-start;
            }

            .card-details {
                background: var(--cor-card);
                padding: 2rem;
                width: 100%;
                max-width: 600px;
                border-radius: 12px;
                box-shadow: 0 0 12px rgba(0,0,0,0.45);
            }

            h1 {
                text-align: center;
                font-size: 2.3rem;
                margin-bottom: 1rem;
                text-shadow: 0 0 6px rgba(38,165,238,0.3);
            }

            dl dt {
                font-weight: 600;
                color: var(--cor-nexos);
                margin-top: .8rem;
            }

            dl dd {
                margin-bottom: .5rem;
                font-size: 1.1rem;
            }

            .btn-primary {
                display: block;
                width: 100%;
                background: var(--cor-nexos);
                padding: .75rem;
                text-align: center;
                color: white;
                text-decoration: none;
                font-weight: 600;
                border-radius: 8px;
                margin-top: 1.5rem;
                transition: .2s;
            }

                .btn-primary:hover {
                    background: var(--cor-nexosdark);
                }

            .back-link {
                display: block;
                text-align: center;
                margin-top: 1rem;
                color: var(--cor-nexos);
                text-decoration: none;
                font-weight: 600;
            }

                .back-link:hover {
                    color: var(--cor-nexosdark);
                }

        </style>
    </head>

    <body>
        <main>

            <div class="card-details">

                <h1>Detalhes do Usuário</h1>

                <dl>
                    <dt>@Html.DisplayNameFor(model => model.TabUsuarios.Nome)</dt>
                    <dd>@Model.TabUsuarios.Nome</dd>

                    <dt>@Html.DisplayNameFor(model => model.TabUsuarios.Matricula)</dt>
                    <dd>@Model.TabUsuarios.Matricula</dd>

                    <dt>@Html.DisplayNameFor(model => model.TabUsuarios.Cargo)</dt>
                    <dd>@Model.TabUsuarios.Cargo</dd>

                    <dt>@Html.DisplayNameFor(model => model.TabUsuarios.Senha)</dt>
                    <dd>@Model.TabUsuarios.Senha</dd>
                </dl>

                <a asp-page="./Edit" asp-route-id="@Model.TabUsuarios.IdTabUsuarios" class="btn-primary">Editar Usuário</a>

                <a asp-page="./Index" class="back-link">Voltar à Lista</a>

            </div>

        </main>
    </body>

    </html>
}
