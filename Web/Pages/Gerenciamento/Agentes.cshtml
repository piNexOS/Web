@page
@model Web.Pages.Gerenciamento.Agentes

<h1>Gerenciar Agentes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.TabAgentes[0].Nome)</th>
            <th>@Html.DisplayNameFor(model => model.TabAgentes[0].Status)</th>
            <th>@Html.DisplayNameFor(model => model.TabAgentes[0].Matricula)</th>
            <th>Programadas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TabAgentes)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Status</td>
                <td>@item.Matricula</td>

                <!-- Contando todos os RoteiroDetalhes (OS) do agente -->
                <td>
                    @(item.Roteiros?.Sum(r => r.RoteiroDetalhes.Count) ?? 0)
                </td>
            </tr>
        }
    </tbody>
</table>