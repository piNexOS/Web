@page
@model Web.Pages.ImpExpServicos.IndexModel

@{
    <!DOCTYPE html>
    <html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Importar / Exportar Serviços - NexOS</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

        <style>

            :root {
                --cor-fundo: #373F46;
                --cor-header: #272C2F;
                --cor-nexos: #26a5ee;
                --cor-nexosdark: rgb(17, 136, 206);
                --cor-texto: #fff;
                --cor-card: #2E343A;
                --cor-card-dark: #23282E;
            }

            main {
                background: linear-gradient(15deg, rgba(41,41,41,1) -100%, rgba(58,66,72,1) 70%);
                font-family: "League Spartan", sans-serif;
                color: var(--cor-texto);
                margin: 0;
                padding: 1em;
                min-height: 100vh;
                align-items: center;
                display: flex;
                flex-flow: column nowrap;
                width: 100%;
            }

            h1 {
                text-align: center;
                font-size: 2.5rem;
                margin-bottom: 2rem;
                font-weight: 600;
                color: var(--cor-texto);
                text-shadow: 0 0 6px rgba(38,165,238,0.35);
            }

            /* ===== ÁREA DE UPLOAD ===== */

            .upload-area {
                margin-top: 1rem;
                background: rgba(255,255,255,0.05);
                padding: 2rem;
                border-radius: 14px;
                width: 70%;
                max-width: 600px;
                display: flex;
                flex-flow: column nowrap;
                align-items: center;
                gap: 1.4rem;
                box-shadow: 0 0 20px rgba(0,0,0,0.35);
                backdrop-filter: blur(4px);
            }

            .upload-label {
                font-size: 1.2rem;
                font-weight: 600;
                color: var(--cor-texto);
            }

            .upload-input {
                width: 100%;
                padding: 1rem;
                border-radius: 10px;
                background: var(--cor-card-dark);
                border: 1px solid rgba(255,255,255,0.15);
                color: var(--cor-texto);
            }

            .upload-btn {
                background: var(--cor-nexosdark);
                border: none;
                padding: 0.9rem 2rem;
                border-radius: 10px;
                color: #fff;
                font-size: 1.1rem;
                cursor: pointer;
                font-weight: 600;
                transition: .2s;
                width: 50%;
                max-width: 200px;
            }

                .upload-btn:hover {
                    background: var(--cor-nexos);
                }

            /* RESPONSIVIDADE */
            @@media (max-width: 768px) {
                h1

            {
                font-size: 2rem;
            }

            .upload-area {
                width: 95%;
            }

            }
        </style>

    </head>

    <body>
        <main>

            <h1>Importar / Exportar Serviços</h1>

            <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">

                <div class="upload-area">

                    <label class="upload-label">Selecione um arquivo para importar</label>

                    <input type="file" asp-for="ListFiles" multiple class="upload-input" />

                    <button type="submit" class="upload-btn">Upload</button>

                </div>
            </form>

        </main>
    </body>
    </html>
}
