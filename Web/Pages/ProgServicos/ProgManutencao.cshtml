@page
@model Web.Pages.ProgServicos.ProgManutencaoModel
@{
    var exibirTabela = Model.OrdensServico != null;
}
<!DOCTYPE html>
<html lang="pt-br">

<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manutenção de Programação - NexOS</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>

        :root {
            --cor-fundo: #373F46;
            --cor-header: #272C2F;
            --cor-nexos: #26a5ee;
            --cor-nexosdark: rgb(17, 136, 206);
            --cor-texto: #fff;
            --cor-card: #2E343A;
            --cor-card-dark: #23282E;
        }

        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(15deg, rgba(41,41,41,1) -100%, rgba(58,66,72,1) 70%);
            font-family: "Poppins", sans-serif;
            color: var(--cor-texto);
        }

        main {
            width: 100%;
            min-height: 100vh;
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
            color: var(--cor-texto);
            text-shadow: 0 0 6px rgba(38,165,238,0.3);
        }

        .card {
            width: 100%;
            max-width: 1100px;
            background: rgba(255,255,255,0.05);
            padding: 1.5rem;
            border-radius: 14px;
            box-shadow: 0 0 12px rgba(0,0,0,0.35);
            backdrop-filter: blur(4px);
            margin-bottom: 2rem;
        }

        .form-label {
            font-weight: 600;
        }

        .form-control {
            background: var(--cor-card-dark);
            border: 1px solid rgba(255,255,255,0.18);
            color: var(--cor-texto);
            border-radius: 10px;
            padding: .6rem;
        }

        .btn-nexos {
            text-decoration: none;
            color: white;
            background: var(--cor-nexos);
            padding: .7rem 1.4rem;
            border-radius: 10px;
            font-size: 1.05rem;
            font-weight: 600;
            transition: .2s;
            width: 100%;
            border: none;
        }

            .btn-nexos:hover {
                background: var(--cor-nexosdark);
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            background: var(--cor-card);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 12px rgba(0,0,0,0.35);
        }

        thead {
            background: var(--cor-header);
        }

        th {
            padding: 1rem;
            text-align: center;
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--cor-nexos);
            border-bottom: 2px solid rgba(255,255,255,0.08);
        }

        td {
            padding: 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.06);
            font-size: 1rem;
            color: var(--cor-texto);
            text-align: center;
        }

        tr:hover td {
            background: rgba(38,165,238,0.07);
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        .modal-content {
            background: var(--cor-card);
            border-radius: 12px;
            color: white;
        }

        .modal-header {
            background: var(--cor-header);
            border-bottom: 1px solid rgba(255,255,255,0.15);
        }

        .btn-dark {
            background: var(--cor-card-dark);
            border: none;
            padding: .55rem 1.2rem;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            transition: .2s;
        }

            .btn-dark:hover {
                background: #3a4248;
            }

    </style>

    <script>

        function checkAll(elem) {
            document.getElementsByName('chkSel')
                .forEach(c => c.checked = elem.checked);
        }

        function desprogramar() {
            if ($("#txtData").val() !== $("#txtDataConfirma").val()) return;
            if ($("#ddlAgentes").val() !== $("#ddlAgenteConfirma").val()) return;

            var list = '';
            $("#tabSelecao input[type=checkbox]:checked").each(function () {
                var row = $(this).closest("tr")[0];
                list += parseInt(row.cells[0].innerText) + ',';
            });

            $.getJSON(`?handler=Desprogramar&pData=${$("#txtData").val()}&pIdAgente=${$("#ddlAgentes").val()}&pIdLista=${list}`,
                () => { });

            $("#txtDataConfirma").val("");
            $("#ddlAgenteConfirma").prop("selectedIndex", 0);
        }

        function transferir() {

            var list = '';
            $("#tabSelecao input[type=checkbox]:checked").each(function () {
                var row = $(this).closest("tr")[0];
                list += parseInt(row.cells[0].innerText) + ',';
            });

            $.getJSON(
                `?handler=Transferir&pData=${$("#txtDataTransf").val()}&pIdAgente=${$("#ddlAgenteTransf").val()}&pIdLista=${list}`,
                () => { }
            );

            $("#txtDataTransf").val("");
            $("#ddlAgenteTransf").prop("selectedIndex", 0);
        }

    </script>

</head>

<body>

    <main>

        <h1>Manutenção de Programação</h1>

        <!-- CARD DE FILTRO -->
        <div class="card">

            <form method="post">

                <div class="row">

                    <div class="col-md-3">
                        <label class="form-label">Data</label>
                        <input id="txtData" asp-for="Data" class="form-control" type="date" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Agente</label>
                        @Html.DropDownListFor(x => Model.Agente, Model.ListAgentes, "",
                        new { @class = "form-control", id = "ddlAgentes" })
                    </div>

                    <div class="col-md-2 mt-4">
                        <button type="submit" id="btnVer" asp-page-handler="GetRoteiro" class="btn-nexos">
                            Ver
                        </button>
                    </div>

                    <div class="col-md-2 mt-4">
                        <button type="button" class="btn-nexos" data-bs-toggle="modal" data-bs-target="#myModal">
                            Apagar
                        </button>
                    </div>

                    <div class="col-md-2 mt-4">
                        <button type="button" class="btn-nexos" data-bs-toggle="modal" data-bs-target="#myModalTransf">
                            Transferir
                        </button>
                    </div>

                </div>

            </form>

        </div>

        <!-- TABELA - controle feito pelo Razor -->
        <div id="cardTabela" class="card" style="@(exibirTabela ? "" : "display:none")">

            <table id="tabSelecao">
                <thead>
                    <tr>
                        <th style="display:none">ID</th>
                        <th>Qtd</th>
                        <th><input type="checkbox" onclick="checkAll(this)"></th>
                        <th>Matrícula</th>
                        <th>HD</th>
                        <th>Ciclo</th>
                        <th>Venc.</th>
                        <th>Serviço</th>
                        <th>Status</th>
                        <th>Hora</th>
                        <th>Cidade</th>
                        <th>Bairro</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.OrdensServico != null)
                    {
                        int Count = 0;

                        foreach (var item in Model.OrdensServico)
                        {
                            Count++;
                            <tr>
                                <td style="display:none">@item.IdRoteiroDet</td>
                                <td>@Count</td>
                                <td><input type="checkbox" name="chkSel" /></td>
                                <td>@item.Matricula</td>
                                <td>@item.NumHidrometro</td>
                                <td>@item.Ciclo</td>
                                <td>@string.Format("{0:dd/MM/yy}", item.DataVencimento)</td>
                                <td>@item.Servico</td>
                                <td>@item.Status</td>
                                <td>@string.Format("{0:HH:mm}", item.DataIniAtendimento)</td>
                                <td>@item.Cidade</td>
                                <td>@item.Bairro</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>

    </main>

</body>

</html>